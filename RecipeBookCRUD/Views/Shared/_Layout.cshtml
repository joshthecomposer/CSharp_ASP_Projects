<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearningSession</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearningSession.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="row">
                <div class="col">
                    <h1 class="display-3 text-center">Recipe Book</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="container d-flex gap-4 justify-content-center">
                        <a class="link-primary lead" href="/">Home</a>
                        <p class="lead">|</p>
                        <a class="link-primary lead" href="/recipes/new">Add a Recipe</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
        <main role="main">
            @RenderBody()
        </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
