@model Wedding
<form
    class="container p-5 mt-5 rounded shadow d-flex flex-column gap-4"
    asp-action="CreateWedding"
    asp-controller="Home"
    method="post">
    <h1>Plan a Wedding</h1>
    <hr>
        <input type="hidden" asp-for="UserId" value="@ViewBag.UserId">
        <div class="form-group">
            <input class="form-control" asp-for="NameOne" type="text" placeholder="Wedder One">
            <span asp-validation-for="NameOne"></span>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="NameTwo" type="text" placeholder="Wedder Two">
            <span asp-validation-for="NameTwo"></span>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="Date" type="date" placeholder="Wedding Date">
            <span asp-validation-for="Date"></span>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="Address" type="text" placeholder="Address">
            <span asp-validation-for="Address"></span>
        </div>
    <button type="submit" class="btn btn-outline-primary col-12">Submit</button>
</form>