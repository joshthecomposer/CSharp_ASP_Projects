@model Wedding
<form
    class="container p-5 mt-5 rounded shadow d-flex flex-column gap-4"
    asp-action="CreateWedding"
    asp-controller="Home"
    method="post">
        <h1>Plan a Wedding</h1>
        <hr>
            <div class="form-group">
                <input asp-for="NameOne" type="text" placeholder="Wedder One">
            </div>
            <div class="form-group">
                <input asp-for="NameTwo" type="text" placeholder="Wedder Two">
            </div>
            <div class="form-group">
                <input asp-for="Date" type="date" placeholder="Wedding Date">
            </div>
            <div class="form-group">
                <input asp-for="Address" type="text" placeholder="Address">
            </div>
        <button type="submit" class="btn btn-outline-primary col-12">Submit</button>
</form>