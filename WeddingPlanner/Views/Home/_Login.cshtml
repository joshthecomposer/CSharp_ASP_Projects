@model LoginUser
<form
    class="container p-5 mt-5 rounded shadow d-flex flex-column gap-4" 
    asp-action="Login"
    asp-controller="Home"
    method="post">
    <h1 justify-self-top>Login</h1>
    <hr>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="Email"></span>
            <input class="form-control" type="text" asp-for="Email" placeholder="Email">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="Password"></span>
            <input class="form-control" type="password" asp-for="Password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-outline-primary col-12">Submit</button>
</form>