@model User
<form
    class="container p-5 mt-5 rounded shadow d-flex flex-column gap-4"
    asp-action="Register"
    asp-controller="Home"
    method="post">
        <h1>Register</h1>
        <hr>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="FirstName"></span>
            <input class="form-control" type="text" asp-for="FirstName" placeholder="First Name">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="LastName"></span>
            <input class="form-control" type="text" asp-for="LastName" placeholder="Last Name">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="Email"></span>
            <input class="form-control" type="text" asp-for="Email" placeholder="Email">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="Password"></span>
            <input class="form-control" type="password" asp-for="Password" placeholder="Password">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="Confirm"></span>
            <input class="form-control" type="password" asp-for="Confirm" placeholder="Confirm Password">
        </div>
        <button type="submit" class="btn btn-outline-primary col-12">Submit</button>
</form>