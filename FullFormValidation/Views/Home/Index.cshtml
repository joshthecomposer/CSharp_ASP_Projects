@{
    ViewData["Title"] = "Home Page";
}

@model User
<div class="container col-4 shadow rounded p-5 my-5">
    <h1 class="text-center display-5">Form Validation</h1>
    <form action="/register" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span class="text-danger" asp-validation-for="Name"></span>
        <input class="form-control" asp-for="Name" type="text">
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input class="form-control" asp-for="Email" type="text">
    </div>
    <div class="form-group">
        <label asp-for="Birthday"></label>
        <span class="text-danger" asp-validation-for="Birthday"></span>
        <input class="form-control" asp-for="Birthday" type="date">
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input class="form-control" asp-for="Password" type="password">
    </div>
    <div class="form-group">
        <label asp-for="FavoriteOddNumber"></label>
        <span class="text-danger" asp-validation-for="FavoriteOddNumber"></span>
        <input class="form-control" asp-for="FavoriteOddNumber" type="number">
    </div>
    <button class="btn btn-outline-primary col-12 mt-4">Submit</button>
    </form>
</div>
