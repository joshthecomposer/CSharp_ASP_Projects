<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Some Foodz</h1>
    @{
        List<string> foodz = new List<string>{
            "Apple", "Pear", "Pizza", "Poop"
        };
        foreach(string f in foodz)
        {
            if (f.Contains("r"))
            {
                <p style="color:red">@f</p>
            } 
            else
            {
                <p>@f</p>
            }
        }
    }
</body>
</html>