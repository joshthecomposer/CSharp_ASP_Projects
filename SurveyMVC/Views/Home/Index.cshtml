@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-4 rounded shadow p-5 my-5">
        <h1 class="display-6 text-center">Survey</h1>
        <hr>
        <form action="process" method="post">
            <div class="form-group">
                <label for="Name">Your Name</label>
                <input class="form-control" type="text" name="Name">
            </div>
            <div class="form-group">
                <label for="Location">Location</label>
                <select class="form-control" name="Location">
                    <option class="text-muted" selected>Select Location</option>
                    <option value="San Jose">San Jose</option>
                    <option value="Chicago">Chicago</option>
                    <option value="LA">LA</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Language">Language</label>
                <select class="form-control" name="Language">
                    <option class="text-muted" selected>Select Language</option>
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="Java">Java</option>
                </select>
            </div>
            <label for="Message">Message</label>
            <textarea name="Message" rows="10" class="form-control"></textarea>
            <button class="btn btn-secondary my-3 col-12">Submit</button>
        </form>
    </div>
