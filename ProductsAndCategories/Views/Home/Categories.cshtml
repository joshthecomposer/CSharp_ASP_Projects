@{
    ViewData["Title"] = "Home Page";
}

@model Category
<div class="container col-5 rounded shadow p-5 mt-3">
    <h1>Add Category</h1>
    <form asp-action="CategoryCreate" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <span class="text-danger" asp-validation-for="Name"></span>
            <input class="form-control" asp-for="Name" type="text">
        </div>
        <button class="btn btn-outline-primary col-12 mt-4">Submit</button>
    </form>
</div>
<div class="container col-5 p-5 mt-3">
    <h1>Categories</h1>
    @foreach(Category c in ViewBag.All)
    {
        <a href="/categories/@c.CategoryId"><p class="lead">@c.Name</p></a>
    }
    <hr>
</div>
