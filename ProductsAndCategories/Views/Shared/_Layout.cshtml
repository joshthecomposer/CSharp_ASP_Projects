<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductsAndCategories</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductsAndCategories.styles.css" asp-append-version="true" />
</head>
<body>
    <nav>
        <div class="container d-flex justify-content-center gap-3">
            <a href="/"><h1 class="display-5">Products</h1></a>
            <h1 class="display-5 text-primary"> | </h1>
            <a href="/categories"><h1 class="display-5">Categories</h1></a>

        </div>
    </nav>
    <main role="main">
        <div class="container d-flex gap-3">
            @RenderBody()
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
