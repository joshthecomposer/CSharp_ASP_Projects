@model User
<form
    class="container p-5 mt-5 rounded shadow d-flex flex-column"
    asp-action="Create"
    asp-controller="Home"
    method="post">
        <h1>Register</h1>
        <hr>
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <span class="text-danger" asp-validation-for="FirstName"></span>
            <input class="form-control" type="text" asp-for="FirstName">
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <span class="text-danger" asp-validation-for="LastName"></span>
            <input class="form-control" type="text" asp-for="LastName">
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <span class="text-danger" asp-validation-for="Email"></span>
            <input class="form-control" type="text" asp-for="Email">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span class="text-danger" asp-validation-for="Password"></span>
            <input class="form-control" type="password" asp-for="Password" >
        </div>
        <div class="form-group">
            <label asp-for="Confirm">Confirm Password</label>
            <span class="text-danger" asp-validation-for="Confirm"></span>
            <input class="form-control" type="password" asp-for="Confirm" >
        </div>
        <button type="submit" class="btn btn-outline-primary col-12 mt-4">Submit</button>
</form>